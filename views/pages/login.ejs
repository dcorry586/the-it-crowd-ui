<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= pageTitle %></title> 
    <%- include('../templates/components/head'); %>
</head>

<%- include('../templates/components/common-nav'); %>
<body>

    <div class="main-container">
        <div class="main-content center">
            

            <section id="form" class="py-5">
                <div class="container">
                    <% if (typeof errormessage != 'undefined') { %>
                    <div class="alert alert-danger" role="alert">
                        <%= errormessage %>
                    </div>
                    <% } %>
            
                    <h1 class="auth-heading">Login</h1>
            
                    <form action="/login" method="post" id="login-form">
                        <div class="form-group">
                            <label for="email" class="form-titles">Email</label>
                            <input type="email" id="email" name="email" class="form-control" placeholder="Enter a valid email" required>
                        </div>
                        <div class="form-group">
                            <label for="password" class="form-titles">Password</label>
                            <input type="password" id="password" name="password" class="form-control" placeholder="Enter a valid password" required>
                        </div>
                        <button type="submit" class="btn custom-button">Login</button>
                    </form>
                </div>
            </section>

        </div>
    </div>

</body>

<%- include('../templates/components/common-footer'); %>
