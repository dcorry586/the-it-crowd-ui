<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="/public/navStyle.css">

<!-- Bootstrap JS, Popper.js, and jQuery scripts for navbar toggle -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<nav class="navbar navbar-light navbar-expand-lg fixed-top">
    <div class="container-fluid">
        <!-- left hand side logo -->
        <a href="/">
            <img src="/public/assets/logo.png" alt="Kainos Logo" id="logo-sizing">
        </a>

        <!-- navbar burger bar for smaller/responsive screens -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-nav"
                aria-controls="navbar-nav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- right hand side navbar links -->
        <div class="collapse navbar-collapse justify-content-end" id="navbar-nav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="custom-nav-link-style" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="custom-nav-link-style" href="/jobs">Jobs</a>
                </li>
                <li class="nav-item">
                    <div id="dropdown-background-when-small">
                        <div class="nav-item dropdown">
                            <a class="custom-nav-link-style dropdown-toggle" href="#" id="contactDropdown" role="button"
                                data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Account
                            </a>
                            <div class="dropdown-menu" aria-labelledby="contactDropdown" id="dropdown-box">
                                <% if (!sessionValid) { %>
                                    <a class="dropdown-item" href="/login">Login</a>

                                    <% } else { %>
                                        <form method="post" action="/logout">
                                            <a class="dropdown-item" id="nav-cust-link" style="cursor: pointer;"
                                                onclick="this.parentNode.submit();">
                                                Logout
                                            </a>
                                        </form>
                                        <% } %>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</nav>
